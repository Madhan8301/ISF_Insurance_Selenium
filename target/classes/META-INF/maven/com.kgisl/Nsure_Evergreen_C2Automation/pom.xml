			<!-- Cucumber Report Generator Plugin -->
			<plugin>
				<groupId>net.masterthought</groupId>
				<artifactId>maven-cucumber-reporting</artifactId>
				<!--<version>5.6.0</version>-->
				<version>3.8.0</version>
				<executions>
					<execution>
						<id>execution</id>
						<phase>test</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<projectName>CholaMS_Pheonix</projectName>
							<!--<skip>false</skip>-->
							<buildNumber>${build.number}</buildNumber>
							<!--<inputDirectory>${project.build.directory}/cucumber/cucumber.json</inputDirectory>-->
							<outputDirectory>${project.build.directory}/cucumber-html-reports</outputDirectory>
							<cucumberOutput>${project.build.directory}/cucumber/cucumber.json</cucumberOutput>
							<enableFlashCharts>false</enableFlashCharts>
							<jsonFiles>
								<param>**/*</param>
							</jsonFiles>
							<checkBuildResult>false</checkBuildResult>
						</configuration>
					</execution>
				</executions>
